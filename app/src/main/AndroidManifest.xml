<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.bongga.touristeando">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="co.bongga.touristeando.ConfigApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="co.bongga.touristeando.activities.Splash"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.bongga.touristeando.activities.Welcome"
            android:label="@string/title_activity_welcome"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="co.bongga.touristeando.activities.Main"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="co.bongga.touristeando.activities.EventDetail"
            android:parentActivityName="co.bongga.touristeando.activities.Main"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.bongga.touristeando.activities.Main" />
        </activity>
        <activity
            android:name="co.bongga.touristeando.activities.PlaceDetail"
            android:parentActivityName="co.bongga.touristeando.activities.Main"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.bongga.touristeando.activities.Main" />
        </activity>
        <activity
            android:name="co.bongga.touristeando.activities.Settings"
            android:label="@string/nav_setting"
            android:parentActivityName="co.bongga.touristeando.activities.Main"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.bongga.touristeando.activities.Main" />
        </activity>
        <activity
            android:name="co.bongga.touristeando.activities.Feedback"
            android:label="@string/nav_feedback"
            android:parentActivityName="co.bongga.touristeando.activities.Main"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.bongga.touristeando.activities.Main" />
        </activity>
        <activity
            android:name="co.bongga.touristeando.activities.Terms"
            android:label="@string/nav_terms"
            android:parentActivityName="co.bongga.touristeando.activities.Main"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.bongga.touristeando.activities.Main" />
        </activity>
        <service
            android:name="co.bongga.touristeando.services.LocationService"
            android:exported="false" />
        <service
            android:name=".services.FCMService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".services.FCMInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
    </application>
</manifest>