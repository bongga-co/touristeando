<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="co.bongga.touristeando.activities.PlaceDetail">
    <LinearLayout
        android:id="@+id/activity_place_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/dt_header_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:background="@color/light_gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:background="@android:color/white">
            <co.bongga.touristeando.ui.TouryTextViewPier
                android:id="@+id/dt_place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold" />
            <co.bongga.touristeando.ui.TouryTextViewPier
                android:id="@+id/dt_place_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
            <RatingBar
                android:id="@+id/dt_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style = "?android:attr/ratingBarStyleIndicator"
                android:numStars = "5"
                android:rating="0"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/priceWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:background="@drawable/container_shadow"
            android:orientation="vertical">
            <co.bongga.touristeando.ui.TouryTextViewPier
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/dt_price_lbl"/>
            <co.bongga.touristeando.ui.TouryTextViewPier
                android:id="@+id/dt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/container_shadow">
            <ImageView
                android:id="@+id/dt_location_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/container_shadow"
                android:gravity="start"
                android:padding="20dp"
                android:elevation="10dp">
                <co.bongga.touristeando.ui.TouryTextViewPier
                    android:id="@+id/dt_place_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_place_address"
                    android:drawableStart="@drawable/ic_place_address"
                    android:drawablePadding="5dp" />
            <LinearLayout
                android:id="@+id/phoneWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <co.bongga.touristeando.ui.TouryTextViewPier
                    android:id="@+id/dt_place_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_place_phone"
                    android:drawableStart="@drawable/ic_place_phone"
                    android:drawablePadding="5dp"/>
                <ImageButton
                    android:id="@+id/btn_call_to_place"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="@string/take_me"
                    android:contentDescription="@string/take_me"
                    android:src="@drawable/ic_call"
                    android:background="@null" />
                </LinearLayout>
                <co.bongga.touristeando.ui.TouryTextViewPier
                    android:id="@+id/dt_place_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_place_city"
                    android:drawableStart="@drawable/ic_place_city"
                    android:drawablePadding="5dp"/>
                <co.bongga.touristeando.ui.TouryTextViewPier
                    android:id="@+id/dt_place_city_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_place_landmark"
                    android:drawableStart="@drawable/ic_place_landmark"
                    android:drawablePadding="5dp"/>
                <LinearLayout
                    android:id="@+id/locationWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <co.bongga.touristeando.ui.TouryTextViewPier
                        android:id="@+id/dt_place_distance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_place_distance"
                        android:drawableStart="@drawable/ic_place_distance"
                        android:drawablePadding="5dp"/>
                    <ImageButton
                        android:id="@+id/btn_take_me_to_place"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="@string/take_me"
                        android:contentDescription="@string/take_me"
                        android:src="@drawable/ic_directions_car"
                        android:background="@null" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <!-- Description -->
        <LinearLayout
            android:id="@+id/descriptionWrapperHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_place_description"
                android:background="@null" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/descriptionWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/container_shadow">
            <co.bongga.touristeando.ui.TouryTextViewPier
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/dt_place_description"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent" />
            <co.bongga.touristeando.ui.TouryTextViewPier
                android:id="@+id/dt_place_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center" />
            <View
                android:id="@+id/desc_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp" />
            <Button
                android:id="@+id/btn_toggle_description"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/btn_toggle_place_description"
                android:background="@drawable/component_bordered_with_shadow"
                android:textColor="@android:color/darker_gray"
                android:padding="5dp" />
        </LinearLayout>
        <!-- GalleryItem -->
        <LinearLayout
            android:id="@+id/dt_place_gallery_label_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_add_photo_gallery"
                android:background="@null" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dt_place_gallery_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/container_shadow">
            <co.bongga.touristeando.ui.TouryTextViewPier
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/dt_place_gallery"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/standar_primary" />
            <ProgressBar
                android:id="@+id/gallery_progress"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:indeterminate="true"
                android:elevation="5dp"
                android:layout_gravity="center"
                android:visibility="gone"/>
            <co.bongga.touristeando.ui.TouryTextViewPier
                android:id="@+id/dt_place_gallery_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dt_place_gallery_empty"
                android:textAlignment="center" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/dt_gallery_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_see_all_images"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.5"
                    android:layout_marginRight="5dp"
                    android:text="@string/btn_see_all_images"
                    android:background="@drawable/component_bordered_with_shadow"
                    android:textColor="@android:color/darker_gray"
                    android:padding="5dp"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/btn_add_picture"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.5"
                    android:text="@string/btn_add_picture"
                    android:background="@drawable/component_bordered_with_shadow"
                    android:textColor="@color/standar_primary"
                    android:padding="5dp"
                    android:layout_marginTop="20dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
        <!-- Services -->
        <LinearLayout
            android:id="@+id/dt_place_services_label_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:visibility="gone">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_place_services"
                android:background="@null" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dt_place_services_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/container_shadow"
            android:visibility="gone">
            <co.bongga.touristeando.ui.TouryTextViewPier
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/dt_place_services"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/standar_primary" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/dt_services_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
