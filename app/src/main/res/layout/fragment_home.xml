<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tile_bg"
    tools:context="co.bongga.toury.fragments.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/chatList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="70dp"
            android:clipToPadding="false"/>
        <LinearLayout
            android:id="@+id/chat_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:elevation="10dp"
            android:background="@drawable/rounded_corners">
            <ProgressBar
                android:id="@+id/chat_response_progress"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="5dp"
                android:indeterminate="true"
                android:layout_marginEnd="5dp"
                android:elevation="5dp"
                android:layout_gravity="center_vertical"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/chat_left_action"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center_vertical" />
            <EditText
                android:id="@+id/rqText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:hint="@string/txt_placeholder_chat_input"
                android:layout_weight="0.9"
                android:padding="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"/>
            <ImageButton
                android:id="@+id/btnSpeech"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_btn_speak_now"
                android:background="@null"/>
            <ImageButton
                android:id="@+id/btnText"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_send"
                android:background="@null"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
